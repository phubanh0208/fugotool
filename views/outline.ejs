     document.getElementById('dowload-image').addEventListener('click', async function() {
      // Xác định các thẻ ảnh và loại bỏ chúng
      var editor = document.getElementById('editor');
      document.getElementById('loading').style.display = 'flex';
     // Tạo một HTML div tạm thời để chứa chỉ các thẻ img
     var tempDiv = document.createElement('div');
     tempDiv.innerHTML = editor.innerHTML;
     var images = tempDiv.querySelectorAll('img');
 
     // Tạo một div mới chỉ chứa các thẻ img
     var newDiv = document.createElement('div');
     images.forEach(function(img) {
         newDiv.appendChild(img.cloneNode(true)); // Clone mỗi thẻ img để tránh xóa khỏi editor ban đầu
     });
     console.log(newDiv.innerHTML);
      // Tải ảnh xuống và nén thành file zip bằng Node.js
      const response = await fetch('/download-images', {
          method: 'POST',
          headers: {
              'Content-Type': 'application/json'
          },
          body: JSON.stringify({ htmlContent: newDiv.innerHTML })
      });

      if (response.ok) {
          // Nếu tải xuống thành công, tạo một liên kết để tải file zip
          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = 'images.zip';
          a.click();
          document.getElementById('loading').style.display = 'none';

      } else {
          console.error('Failed to download images');
      }
  });
        function handlePaste(event) {
            // Ngăn chặn sự kiện paste mặc định
            event.preventDefault();

            // Lấy văn bản được dán vào từ clipboard
            var clipboardData = (event.clipboardData || window.clipboardData);
            var pastedData = clipboardData.getData('text/html') || clipboardData.getData('text/plain');

            // Dán văn bản vào vị trí con trỏ hiện tại
            document.execCommand('insertHTML', false, pastedData);
        }
